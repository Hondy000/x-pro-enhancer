{
  "manifest_version": 3,
  "name": "X to Bird - Bring Back the Blue Bird",
  "version": "1.0.0",
  "description": "Replace the X logo with the classic Twitter blue bird. Tired of the big X? Bring back the familiar blue bird!",
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://x.com/*",
    "https://twitter.com/*",
    "https://pro.x.com/*",
    "https://mobile.x.com/*",
    "https://tweetdeck.twitter.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*",
        "https://pro.x.com/*",
        "https://mobile.x.com/*",
        "https://tweetdeck.twitter.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["images/twitter-bird.svg"],
      "matches": ["<all_urls>"]
    }
  ]
}